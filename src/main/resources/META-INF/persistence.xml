<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="yservices">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.ycompany.support.model.User</class>
		<class>com.ycompany.support.model.Address</class>
		<class>com.ycompany.support.model.Role</class>
		<class>com.ycompany.support.model.Appliance</class>
		<class>com.ycompany.support.model.ServiceCentre</class>
		<class>com.ycompany.support.model.Ticket</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.bytecode.use_reflection_optimizer"
				value="true" />
			<property name="hibernate.transaction.auto_close_session"
				value="true" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.jdbc.batch_size" value="0" />
			<property name="hibernate.query.substitutions" value="true 'Y', false 'N'" />
			<property name="hibernate.auto-import" value="false"/>
		</properties>
	</persistence-unit>
</persistence>